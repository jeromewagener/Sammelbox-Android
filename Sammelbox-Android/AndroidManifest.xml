<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sammelbox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.sammelbox.android.view.activity.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.sammelbox.android.view.activity.AlbumSelectionActivity"
            android:label="@string/title_activity_album_selection" >
        </activity>
        <activity
            android:name="org.sammelbox.android.view.activity.SynchronizationActivity"
            android:label="@string/title_activity_synchronization" >
        </activity>
        <activity
            android:name="org.sammelbox.android.view.activity.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name="org.sammelbox.android.view.activity.AlbumItemBrowserActivity"
            android:label="@string/title_activity_album_item_browse" >
        </activity>
        <activity
            android:name="org.sammelbox.android.view.activity.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
    </application>

</manifest>