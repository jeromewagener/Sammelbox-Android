<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="100" >

    <TextView
        android:id="@+id/lblAlbums"
        style="@style/sammelboxAndroidHeading"
        android:text="@string/albums_label" />

    <ListView
        android:id="@+id/listAlbums"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:fadeScrollbars="false" >
    </ListView>

    <TextView
        android:id="@+id/lblSavedSearches"
        style="@style/sammelboxAndroidHeading"
        android:text="@string/saved_searches_label" />

    <ListView
        android:id="@+id/listSavedSearches"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:fadeScrollbars="false" >
    </ListView>

</LinearLayout>